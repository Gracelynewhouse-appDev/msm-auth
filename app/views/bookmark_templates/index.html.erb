<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All bookmarks
    </h1>

    <a href="/bookmarks/new" class="btn btn-block btn-outline-secondary">
      Add a new bookmark
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Movie
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <% if bookmark.user_id == current_user.id %>
      <tr>
        <td>
          <%= bookmark.id %>
        </td>

        <td>
          <%= bookmark.user_id %>
        </td>

        <td>
          <a  href="/movies/<%=bookmark.movie_id %>">
          <%= Movie.find(bookmark.movie_id).title %>
          </a>
        </td>

        <td>
          <%= time_ago_in_words(bookmark.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(bookmark.updated_at) %> ago
        </td>

        <td>
          <a href="/bookmarks/<%= bookmark.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>
